<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- Google Fonts for better typography -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet" />
    <!-- Bootstrap 5 CDN for modern styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      body {
      font-family: 'Roboto', Arial, sans-serif;
      background: #f8f9fa;
      }
      .navbar {
      margin-bottom: 2rem;
      }
      .card {
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: transform 0.2s;
      }
      .card:hover {
      transform: translateY(-5px) scale(1.03);
      box-shadow: 0 4px 16px rgba(0,0,0,0.12);
      }
      .card-img-top {
      height: 180px;
      object-fit: cover;
      }
      .container.mt-4 {
      min-height: 60vh;
      }
      .no-blogs {
      text-align: center;
      padding: 4rem 0;
      color: #6c757d;
      }
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partial/head.ejs') %>
    <title>HomePage</title>
  </head>
  <body>
    <%- include('partial/navbar.ejs') %>

    <div class="container mt-4 d-flex flex-wrap justify-content-center gap-3">

    <% if(blogs && blogs.length > 0) { blogs.forEach(blog => { %>

    <div class="card" style="width: 18rem">
      <img
        src="<%= blog.coverImageUrl %>"
        class="card-img-top"
        alt="Blog Image"
      />

      <div class="card-body">
        <h5 class="card-title"><%= blog.title %></h5>
        <a href="/blog/<%= blog._id %>" class="btn btn-primary">Go somewhere</a>
      </div>

    </div>

  
    <% }) %> <% } else { %>
    <div class="container mt-4">
      <h1>No Blogs Available</h1>
      <p>Please check back later or add a new blog.</p>
    </div>
    <% } %> 
   </div>

   <!-- Slider Section Start -->
<div id="blogSlider" class="carousel slide mb-4 mt-4" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% if (blogs && blogs.length > 0) { blogs.forEach(function(blog, idx) { %>
      <div class="carousel-item <%= idx === 0 ? 'active' : '' %>">
        <img src="<%= blog.coverImageUrl %>" class="d-block w-100" alt="Blog Image" style="height:300px;object-fit:cover;">
        <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
          <h5><%= blog.title %></h5>
          <a href="/blog/<%= blog._id %>" class="btn btn-primary btn-sm">Read More</a>
        </div>
      </div>
    <% }) } else { %>
      <div class="carousel-item active">
        <div class="d-flex align-items-center justify-content-center" style="height:300px;background:#e9ecef;">
          <h3 class="text-muted">No Blogs Available</h3>
        </div>
      </div>
    <% } %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#blogSlider" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#blogSlider" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<!-- Slider Section End -->
    <%- include('partial/script.ejs') %>
    <!-- Bootstrap JS Bundle (includes Popper) for carousel functionality -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
